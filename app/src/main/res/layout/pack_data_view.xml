<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pack_cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <TextView
                android:id="@+id/pack_data_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:23"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pack_data_mark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toStartOf="@id/pack_data_kvo"
                android:layout_toEndOf="@id/pack_data_time"
                android:text="Уони 13/55 ф 4.0\nпартия 0123-2024"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pack_data_kvo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="16dp"
                android:text="1200 кг"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pack_data_rab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pack_data_cont"
                android:text="Матросова Л.В."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pack_data_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pack_data_cont"
                android:layout_toEndOf="@+id/pack_data_rab"
                android:layout_alignParentRight="true"
                android:text="Мастер: Колодкина Н.А."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pack_data_cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pack_data_kvo"
                android:layout_alignParentRight="true"
                android:text="Поддон: E000000001"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>